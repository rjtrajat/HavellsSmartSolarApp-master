<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:layout_marginTop="15sp">
        <RelativeLayout
            android:layout_width="wraEp_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:paddingBottom="20sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:onClick="Load_default"
            >
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/back_arrow"-->
                <!--android:id="@+id/light_control_back_id"-->
                <!--android:onClick="onBacklight_control"-->
                <!--/>-->

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/light_control_back_id"
                android:text="Back"
                android:onClick="onBacklight_control"

                android:textColor="#ffffff"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="150sp"
            android:layout_centerHorizontal="true">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUMINAIRE CONTROL"

                android:textColor="#ffffff"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:onClick="Savelightcontrol"
            android:layout_marginRight="10sp"

            android:paddingBottom="20sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"

            >
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_light_control_id"
                android:text="Save"

                android:textColor="#ffffff"
               />
        </RelativeLayout>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lamp_on_off"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/lamp_name_id">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50sp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUMINAIRE POLE NO:"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"


            >

            <EditText
                android:inputType="number"
                android:maxLength="5"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/deviceName_id"
                android:singleLine="true"
                android:backgroundTint="@android:color/white"
                android:text=""
                />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lamp_geo"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20sp"
        android:onClick="MapLocation"
        android:layout_marginRight="20sp"
        android:id="@+id/lamp_geo_location_id">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50sp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUMINAIRE GEO LOCATION:"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/geolocation_text_id"
                android:text=""
                android:textSize="10sp"
                />
        </LinearLayout>
    </RelativeLayout>
