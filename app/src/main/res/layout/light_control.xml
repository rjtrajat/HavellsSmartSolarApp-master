    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_box"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:id="@+id/control_box_id">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/control_button_id"
            android:layout_alignParentRight="false"
            android:layout_marginRight="10sp"
            android:layout_centerInParent="true">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Brightness"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical|left"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="20sp" />



                <NumberPicker
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:id="@+id/per_picker_light_control"
                    android:layout_height="100sp">



                </NumberPicker>


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lamp_on_off"
        android:layout_marginTop="10sp"
        android:onClick="gotoWatt"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/luminaire_power_id">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50sp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUMINAIRE POWER"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40sp"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:id="@+id/luminaire_power_text_id"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/forword_arrow_second"
                android:id="@+id/forward_power_id"

                />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/timer"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20sp"
        android:onClick="gotoTimer"
        android:layout_marginRight="20sp"

        android:id="@+id/timer_id">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50sp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIMER"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70sp"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text=""
                android:id="@+id/light_control_timer_value_id"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40sp"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/light_control_timer_on_off_id"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forward_timer_id"
                android:background="@drawable/forword_arrow_second"

                />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/luminaire_power"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"

        android:id="@+id/lamp_on_off_id_light_control"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"


            android:layout_marginLeft="50sp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:id="@+id/onoff_id"
                android:text="LUMINAIRE ON"


                android:textColor="#ffffff" />



        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lamp_on_button"
                android:id="@+id/lamp_on_button_background"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lamp_on_button_new"
                    android:id="@+id/lamp_on_button_new_id"
                    android:layout_alignParentRight="false"
                    android:onClick="onoff_fun"
                    android:layout_centerVertical="true"
                    android:layout_alignWithParentIfMissing="false"
                    />


            </RelativeLayout>



            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lamp_on_button_new_id_second"
                android:background="@drawable/lamp_on_button_new"
                android:onClick="onoff_fun"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />


        </RelativeLayout>







    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:onClick="Load_default"
        android:background="#4B9E32"

        android:layout_gravity="center_horizontal"
       >
        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/back_arrow"-->
        <!--android:id="@+id/light_control_back_id"-->
        <!--android:onClick="onBacklight_control"-->
        <!--/>-->

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_default_light_control_id"
            android:text="Load Default Configuration"

            android:textColor="#ffffff"
            />
    </RelativeLayout>



</LinearLayout>