<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0px"
    android:orientation="vertical"
    tools:context="in.chipmonk.havellsolarapp.MainActivity"
    android:background="@drawable/background_login">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_marginRight="6sp"
    android:layout_marginLeft="6sp"
    android:layout_marginTop="70sp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/operatorRegister"
        android:id="@+id/Operatorbutton"
        android:background="@android:color/transparent"
        android:textColor="#ffffff"

        android:gravity="left|fill_vertical"
        android:layout_alignParentLeft="true"
        android:onClick="operatorButton"
        />


            <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adminRegister"
        android:id="@+id/Adminbutton"
        android:background="@android:color/transparent"
        android:textColor="#ffffff"
                android:onClick="admitButton"
        android:gravity="right|fill_vertical"
                android:layout_alignParentRight="true" />

</RelativeLayout>
    <RelativeLayout   android:layout_width="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="4sp"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/operatorLine"
            android:layout_width="80sp"
            android:layout_height= "7sp"

            android:layout_alignParentLeft="true"
            android:background="#ffffff" />
        <View
            android:id="@+id/adminLine"
            android:layout_width="57sp"

            android:layout_height= "7sp"

            android:background="#ffffff"
            android:layout_alignParentRight="true" />

    </RelativeLayout>




    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UserNameId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"


        android:paddingLeft="50sp"
        android:background="@drawable/user_name"
        android:drawablePadding="10sp"
        android:textColor="#ffffff"
        android:hint="User name"

        android:textColorHint="#ffffff"
        android:textSize="17sp"
        android:singleLine="true"

        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        android:id="@+id/Password"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="10sp"
        android:paddingLeft="50sp"
        android:background="@drawable/password"

        android:textColorHint="#ffffff"
        android:textColor="#ffffff"

        android:drawablePadding="10sp"
        android:hint="Password"
        android:textSize="17sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:background="@drawable/get_started"
        android:layout_marginTop="20sp"

        android:id="@+id/LoginButton"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:onClick="LoggedIn"
        />





<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="0px"
android:paddingRight="0px"

android:paddingTop="5sp"
android:orientation="horizontal"
tools:context="in.chipmonk.havellsolarapp.MainActivity"

    android:weightSum="1"
    android:layout_gravity="center_horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/changePasswordRegister"
    android:id="@+id/changePassword"
    android:textSize="13sp"


    android:textColor="#ffffff"
    android:layout_alignParentLeft="true"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotPasswordRegister"
        android:id="@+id/forgotPassword"
        android:textSize="13sp"

        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
       />

</RelativeLayout>
